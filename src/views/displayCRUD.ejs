<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>get CRUD</title>
</head>
<style>
    table,
    th,
    td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    a.btn-edit {
        background-color: BEIGE;
        border: none;
        outline: none;
        height: 25px;
        width: 60px;
        border-radius: 3px;
    }

    a.btn-del {
        background-color: rgb(141, 55, 55);
        border: none;
        outline: none;
        height: 25px;
        width: 60px;
        border-radius: 3px;
        font-style: oblique;
    }
</style>

<body>
    <table style=" width: 100%">
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>address</th>
            <th>gender</th>
            <th>roleId</th>
            <th>phone Number</th>
            <th>Action</th>
        </tr>

        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
                <td>
                    <%= dataTable[i].email %>
                </td>
                <td>
                    <%= dataTable[i].firstName %>
                </td>
                <td>
                    <%= dataTable[i].lastName %>
                </td>
                <td>
                    <%= dataTable[i].address %>
                </td>
                <td>
                    <%= dataTable[i].gender %>
                </td>
                <td>
                    <%= dataTable[i].roleId %>
                </td>
                <td>
                    <%= dataTable[i].phoneNumber %>
                </td>
                <td>
                    <a type="button" class="btn-edit" href="/edit-crud?id=<%= dataTable[i].id %>">Edit</a>
                    <a type="button" class="btn-del" href="/delete-crud?id=<%= dataTable[i].id %>">Delete</a>
                </td>
            </tr>
            <% } %>
    </table>
</body>


</html>